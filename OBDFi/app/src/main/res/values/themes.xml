<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OBDFi" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#06409E</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>s
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="actionBarSize">200dp</item>
        <item name="android:actionBarSize">200dp</item>
        <item name="android:actionBarItemBackground">@drawable/simlogo</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.OBDFi.actionbar">
        <item name="actionBarSize">50dp</item>
        <item name="android:actionBarSize">50dp</item>
    </style>

    <style name="Theme.OBDFi.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.OBDFi.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.OBDFi.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Theme.FixedSize" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="actionBarSize">200dp</item>
        <item name="android:actionBarSize">200dp</item>
    </style>
</resources>