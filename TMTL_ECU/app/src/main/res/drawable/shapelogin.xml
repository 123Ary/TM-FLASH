<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="1dp"
        android:left="-2dp"
        android:right="-2dp"
        android:top="-1dp">
        <shape android:shape="rectangle">

            <corners
                android:radius="15dp">
            </corners>
            <stroke
                android:width="0.5dp"
                android:color="@android:color/white" />
            <solid android:color="#ffffff" />
            <stroke
                android:width="1dp"
                android:color="@android:color/white"
                />
            <style >
                <item android:name="android:gravity">top|center</item>
            </style>
            <size
                android:width="150dp"
                android:height="150dp" />
            <padding
                android:bottom="1dp"
                android:left="5dp"
                android:right="5dp"
                android:top="1dp" />
        </shape>
    </item>
</layer-list>